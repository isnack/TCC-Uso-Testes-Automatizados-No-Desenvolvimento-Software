  "devDependencies": {
    "angular": "^1.5.8",
    "bootstrap": "^3.3.7",
    "casperjs": "^1.1.3",
    "chai": "^3.5.0",
    "coveralls": "^2.11.12",
    "mocha": "^2.5.3",
    "mocha-lcov-reporter": "^1.2.0",
