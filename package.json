  "description": "Trabalho de conclus√£o de curso sobre testes automatizados no desenvolvimento de software",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "testFunctional": "./node_modules/.bin/casperjs test testFunctional/functionalTest.js",
    "start": "http-server ./ -p 8585",
    "restServer": "node server.js",
